    for point in $breakpoints--min
        +media-breakpoint-up( point )

            .{$utils.height}
                for num in $lstRems
                    &{$pfxType}{num}{$pfxMod}{point}
                        height num*1rem $sfxImportant

                for num in $lstPercs
                    &{$pfxType}{num}{$sfxPcnt}{$pfxMod}{point}
                        height num*1% $sfxImportant


            .{$utils.min-height}
                for num in $lstRems
                    &{$pfxType}{num}{$pfxMod}{point}
                        min-height num*1rem $sfxImportant

                for num in $lstPercs
                    &{$pfxType}{num}{$sfxPcnt}{$pfxMod}{point}
                        min-height num*1% $sfxImportant


            .{$utils.max-height}
                for num in $lstRems
                    &{$pfxType}{num}{$pfxMod}{point}
                        max-height num*1rem $sfxImportant

                for num in $lstPercs
                    &{$pfxType}{num}{$sfxPcnt}{$pfxMod}{point}
                        max-height num*1% $sfxImportant


            .{$utils.viewport-height}
                for num in $lstPercs
                    &{$pfxType}{num}{$pfxMod}{point}
                        height num*1vh $sfxImportant


            .{$utils.min-viewport-height}
                for num in $lstPercs
                    &{$pfxType}{num}{$pfxMod}{point}
                        min-height num*1vh $sfxImportant


            .{$utils.max-viewport-height}
