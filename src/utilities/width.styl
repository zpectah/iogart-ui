/*
Width
*/

.{$utils.width}
    for num in $lstRems
        &{$pfxType}{num}
            width num*1rem $sfxImportant

    for num in $lstPercs
        &{$pfxType}{num}{$sfxPcnt}
            width num*1% $sfxImportant


/*
Min Width
*/

.{$utils.min-width}
    for num in $lstRems
        &{$pfxType}{num}
            min-width num*1rem $sfxImportant

    for num in $lstPercs
        &{$pfxType}{num}{$sfxPcnt}
            min-width num*1% $sfxImportant


/*
Max Width
*/

.{$utils.max-width}
    for num in $lstRems
        &{$pfxType}{num}
            max-width num*1rem $sfxImportant

    for num in $lstPercs
        &{$pfxType}{num}{$sfxPcnt}
            max-width num*1% $sfxImportant


/*
Viewport Width
*/

.{$utils.viewport-width}
    for num in $lstPercs
        &{$pfxType}{num}
            width num*1vw $sfxImportant


/*
Min Viewport Width
*/

.{$utils.min-viewport-width}
    for num in $lstPercs
        &{$pfxType}{num}
            min-width num*1vw $sfxImportant


/*
Max Viewport Width
*/

.{$utils.max-viewport-width}
    for num in $lstPercs
        &{$pfxType}{num}
            max-width num*1vw $sfxImportant


