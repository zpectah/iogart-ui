                for num in $lstPercs
                    &{$pfxType}{num}{$sfxPcnt}{$pfxMod}{point}
                        width num*1% $sfxImportant


            .{$utils.min-width}
                for num in $lstRems
                    &{$pfxType}{num}{$pfxMod}{point}
                        min-width num*1rem $sfxImportant

                for num in $lstPercs
                    &{$pfxType}{num}{$sfxPcnt}{$pfxMod}{point}
                        min-width num*1% $sfxImportant


            .{$utils.max-width}
                for num in $lstRems
                    &{$pfxType}{num}{$pfxMod}{point}
                        max-width num*1rem $sfxImportant

                for num in $lstPercs
                    &{$pfxType}{num}{$sfxPcnt}{$pfxMod}{point}
                        max-width num*1% $sfxImportant


            .{$utils.viewport-width}
                for num in $lstPercs
                    &{$pfxType}{num}{$pfxMod}{point}
