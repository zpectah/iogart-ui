html
    width 100%
    height 100%
    margin 0
    padding 0
    font-family $font-family--sans-serif
    font-size $font-size-document
    -webkit-text-size-adjust 100%

body
    width 100%
    height auto
    margin 0
    padding 0
    font-size $font-size-base
    line-height 1
    color $grey-8
    background-color white

    &.modal-is-open
        overflow hidden


*,
*::before,
*::after
    box-sizing border-box


*:focus
    outline-color rgba( $primary, .5 )
    outline-offset 1px
    outline-width 1px
    outline-style dashed


main
    display block


