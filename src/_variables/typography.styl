/*
Font family
*/
$font-family--sans-serif = -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"
$font-family--monospace = SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace


/*
Font size
*/
$font-size-document = 14.3434px
$font-size-base = 1rem
$font-size--sm = $font-size-document * $coef-sm
$font-size--lg = $font-size-document * $coef-lg

/*
Font size for paragraphs and other text blocks
*/
$font-size-p-base = 1.125rem

/*
Font size for lead text
*/
$font-size-lead-base = 1.25rem

/*
Font weight
*/
$font-weight-base = 400
$font-weight-normal = $font-weight-base
$font-weight-light = 300
$font-weight-lighter = lighter
$font-weight-bold = 700
$font-weight-bolder = bolder


/*
Line height
*/
$line-height-base = 1.45
$line-height--sm = $line-height-base * $coef-sm
$line-height--lg = $line-height-base * $coef-lg

/*
Line height for heading text
*/
$line-height-heading-base = 1.2


/*
Heading size
*/
$font-size-h1 = 2.25rem
$font-size-h2 = 2rem
$font-size-h3 = 1.75rem
$font-size-h4 = 1.5rem
$font-size-h5 = 1.25rem
$font-size-h6 = $font-size-p-base




