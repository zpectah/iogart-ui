sr-only()
    width 1px
    height 1px
    margin -1px
    padding 0
    white-space nowrap
    position absolute
    overflow hidden
    clip rect( 0, 0, 0, 0 )


sr-only-focusable()
    &:active:focus
        width auto
        height auto
        position static
        overflow visible
        clip auto
        white-space normal

